{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "dist",
        ".turbo"
    ],
    "references": [
        {
            "path": "./frontend"
        },
        {
            "path": "./shared/types"
        },
        {
            "path": "./shared/utils"
        }
    ]
}
